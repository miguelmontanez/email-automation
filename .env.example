# Example Environment Configuration
# Copy this file to .env and fill in your actual credentials

# ============================================================================
# FRESHA API CONFIGURATION
# ============================================================================
# Get these from Fresha Business Portal > Settings > Integrations > API

FRESHA_API_KEY=your_api_key_here_from_fresha
FRESHA_BUSINESS_ID=your_business_id_here_from_fresha

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Gmail Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your_app_specific_password_here
SENDER_NAME=Your Nail Salon

# Alternative: Office 365
# SMTP_SERVER=smtp.office365.com
# SMTP_PORT=587
# SENDER_EMAIL=your-email@company.com
# SENDER_PASSWORD=your_office365_password

# Alternative: Custom SMTP Server
# SMTP_SERVER=smtp.your-server.com
# SMTP_PORT=587
# SENDER_EMAIL=your-email@your-domain.com
# SENDER_PASSWORD=your_password

# ============================================================================
# ALERT CONFIGURATION
# ============================================================================
# Email to receive alerts about script failures

ALERT_EMAIL=owner@example.com
ENABLE_ALERTS=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_LEVEL=INFO
TIMEZONE=America/New_York

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================
# Set to 'true' when running in headless environments (servers, containers, etc.)

HEADLESS_MODE=true

# ============================================================================
# SCHEDULER CONFIGURATION (optional)
# ============================================================================
# Times to send thank-you emails (24-hour format)
# Configured in src/config.py as: THANK_YOU_SEND_TIMES = ["12:00", "19:00"]

# Days to wait before sending follow-up
# Configured in src/config.py as: FOLLOWUP_DAYS = 7
